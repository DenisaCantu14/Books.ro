@model OnlineShop.Models.ApplicationUser
@Styles.Render("~/Content/Form.css")
<br />
<a href="/Users/Show/@Model.Id" class="glyphicon glyphicon-chevron-left back">Back</a>

<div class="small-box">
    <h3 class="Title">Edit user's data</h3>
    <div class="second-box">
        @using (Html.BeginForm(actionName: "Edit", controllerName: "Users", routeValues: new { id = @Model.Id }))
        {
            @Html.HttpMethodOverride(HttpVerbs.Put)

            <br />

            <i class="glyphicon glyphicon-user"></i>
            @Html.Label("UserName", "Nume utilizator", new { @class = "name" })

            <br />

            @Html.Editor("UserName", new { htmlAttributes = new { @class = "form-control type" } })

            <br />
            <br />

            <i class="glyphicon glyphicon-envelope"></i>
            @Html.Label("Email", "Email utilizator", new { @class = "name" })

            <br />

            @Html.Editor("Email", new { htmlAttributes = new { @class = "form-control type" } })


            <br />
            <br />

            <i class="glyphicon glyphicon-phone"></i>
            @Html.Label("PhoneNumber", "Phone Number", new { @class = "name" })

            <br />

            @Html.Editor("PhoneNumber", new { htmlAttributes = new { @class = "form-control type" } })


            <br />
            <br />

            <i class="glyphicon glyphicon-th-list"></i>
            <label class="name">Selectati rolul</label>
            @Html.DropDownList("newRole", new SelectList(Model.AllRoles, "Value", "Text", ViewBag.userRole), null, new { @class = "form-control type" })

            <br />

            <button class="btn btn-sm btn-success add" type="submit">Modify </button>


        }

    </div>
</div>